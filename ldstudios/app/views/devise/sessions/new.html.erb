<div class="container">
  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-sm"> 
      <div class="jumbotron jumb sombra">
            <h2 style="color:grey"><strong style="color:#0063ff">LD</strong>studios</h2>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.label :email, 'Usuario' %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
              </div>
              <div class="field">
                <%= f.label :password, 'ContraseÃ±a' %>
                <%= f.password_field :password, autocomplete: "off",class:"form-control" %>
              </div>
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, 'recordarme' %>
                </div>
              <% end -%>
              <div class="actions">
                <%= f.submit "Ingresar", class:"btn btn-primary btn-block redondo" %>
              </div>
              <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
            <% end %>
      </div>
    </div>
    <div class="col-sm">
    </div>
  </div>
</div>



  