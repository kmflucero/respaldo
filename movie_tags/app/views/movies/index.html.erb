<br>
<div class="container">
  <div class="row">

    <hr>
<p id="notice"><%= notice %></p>
<br>
<h1>Movies</h1>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Tags</th>
      <th>Tags create</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.year %></td>
        <td>
          <% movie.tags.each do |tag| %>
          <%= tag.name %>
          <%= link_to "x", remove_tag_movie_path(movie,tag), class:"badge badge-success", method: :delete %>
          <% end %>
            
          </td>
        <td>
          <%#= form_tag(add_tag_movie_path(movie.id)) do %>
          <%#= text_field_tag :name %> <%# formulario rails 5.0%>
          <%# end %>
          <%= form_with(url: add_tag_movie_path(movie.id), local: true) do %>
           <%= text_field_tag :name %>
          <% end %>
        </td>
        <td><%= link_to 'Mostrar', movie, class:'btn btn-success' %></td>
        <td><%= link_to 'Editar', edit_movie_path(movie), class:'btn btn-warning' %></td>
        <td><%= link_to 'Eliminar', movie, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Movie', new_movie_path %>
    
  </div>
</div>