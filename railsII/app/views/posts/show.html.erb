<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<hr>
<%= form_with(model: [@post, Comment.new], local: true) do |form| %>
<%= form.label :content %>
<%= form.text_area :content %> <br>
<%= form.submit 'comentar' %>
<% end %>

<ul>
	<% @post.comments.each do |comment|%>
	<li>
		<%= comment.content%>
		<%= link_to 'eliminar', post_comment_path(@post, comment), method: :delete, class:'btn btn-danger'%>
		<%= link_to 'editar', edit_post_comment_path(@post, comment), class:'btn btn-warning'%>

	</li>
<% end %>
</ul>
