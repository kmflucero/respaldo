<header>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Registro de productos</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
       
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      
      <button type="button" class="btn btn-warning"><%= link_to 'Editar categoria', edit_category_path(@category), class: "blanco" %> </button>
      <button type="button" class="btn btn-primary "> <%= link_to 'Back', categories_path, class: "blanco" %></button>
    </form>
  </div>
</nav>
</header>


<p id="notice"><%= notice %></p>
<div class="container">
	<div class="row">
		<div class="col">
			<br>
			<div class="jumbotron">
			<h2><strong>Categoria</strong> <%= @category.name %></h2>

			<%= form_with(model: [ @category, @product ]) do |form| %>
		    <%= form.label :name%>
			<%= form.text_field :name, class: "form-text text-muted tamano" %>
			<br>
		    <%= form.label :price%>
			<%= form.text_field :price, class: "form-text text-muted tamano" %>
			<br>
			<%= form.submit :enviar, class: "btn btn-primary" %>
		    <% end %>
		   
			</div>
        </div>
        <div class="col">
        <br>
        	<table class="table table-striped">
			  <thead class="thead-dark">
			    <tr>
			      <th scope="col">Producto</th>
			      <th></th>
			    </tr>
			  </thead>
			  <tbody>
				<% @products.each do |product|%>
			    <tr>
			      <td><%= product.name%></td>
			      <td><%= product.price%></td>
			    </tr>
			  <% end %>
			  </tbody>
			</table>
			<button type="button" class="btn btn-primary "><%= link_to 'Back', categories_path, class: "blanco" %></button>
        </div>
	</div>
</div>
