
<div class="container">
  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-sm"> 
      <div class="jumbotron jumb negro blanco sombra">
          <h2>TINDER</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email, 'correo electronico' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control"  %>
            </div>

            <div class="field">
              <%= f.label :password, 'contraseña' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres minimos)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off",class:"form-control"  %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, 'confirmar contraseña' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control"  %>
            </div>
            <div class="field">
              <%= f.label :age, 'edad' %><br />
              <%= f.number_field :age, autocomplete: "off",class:"form-control" %>
            </div><div class="field">
              <%= f.label :gender, 'Genero' %><br />
              <%= f.text_field :gender, autocomplete: "off",class:"form-control" %>
            </div>
            <div class="field">
              <%= f.label :url %><br />
              <%= f.text_field :url, autocomplete: "off",class:"form-control" %>
            </div>
              <div class="field">
              <%= f.label :bio %><br />
              <%= f.text_area :bio, autocomplete: "off",class:"form-control" %>
            </div>


            <div class="actions">
              <%= f.submit "Sign up", class:"btn btn-primary btn-block redondo botooon" %>
            </div>
          <% end %>
      </div>
    </div>
    <div class="col-sm">
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>