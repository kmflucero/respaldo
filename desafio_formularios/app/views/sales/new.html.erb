<p> <%= notice %></p>
<%= form_with( model: @sale, local: true ) do |f| %>
<br><%= f.label :cod %>
<br><%= f.text_field :cod, id: :cod_content %>

<br><%= f.label :details %>
<br><%= f.text_area(:detail, size: '50x10') %>

<br><%= f.label :category %>
<br><%= f.text_field :category, id: :category_content %>

<br><%= f.label :value %>
<br><%= f.number_field :value, id: :value_content %>

<br><%= f.label :discount %>
<br><%= f.number_field :discount, min:1, max: 40, id: :discount_content %>

<br><%= f.label :iva %>
<%=f.check_box :iva %>
<br>
<%= f.submit "crear" %>
<% end %>